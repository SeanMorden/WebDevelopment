@model IEnumerable<Recipe>

@{
    ViewBag.Title = "All recipe";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">Recipe ID</th>
        <th>Name</th>
        <th class="text-right">Category</th>
        <th class="text-right">Ingredient</th>
        <th class="text-center">Action</th>
    </tr>
    @foreach (Recipe r in Model)
    {
        <tr>
            <td class="text-right">@r.RecipeID</td>
            <td>@r.RecipeName</td>
            <td class="text-right">@r.Category</td>
            <td class="text-right">@r.Ingredients</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">


                    <a asp-action="Edit" asp-route-recipeId="@r.RecipeID" class="btn btn-sm btn-warning">
                        Edit
                    </a>
                    <input type="hidden" name="recipeId" value="@r.RecipeID">

                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-controller="Admin" asp-action="Edit" class="btn btn-primary">Add new Recipe</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</div>